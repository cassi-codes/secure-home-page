    </div>
</section>

<!-- About Section -->
<section class="py-5 about-section-bg">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <div class="modern-card p-3 p-sm-4 p-md-5 modern-card-custom">
                    <div class="d-flex align-items-center mb-4">
                        <div class="icon-circle me-sm-3 icon-circle-cyan">
