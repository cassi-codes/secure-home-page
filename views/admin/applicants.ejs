<% layout('layouts/boilerplate') %>
<%- include('delete') %>

<div class="container-fluid">
    <div class="row justify-content-center m-5">
        <div class="col-12 col-xl-10 custom-bg p-4">
            <h1 class="text-center mb-4"><span class="title-text">応募者一覧</span></h1>
            <div class="text-center text-sm-end mb-4">
                <button id="toggleSelectionMode" class="btn btn-primary mb-2">選択削除</button>
                <button id="deleteSelected" class="btn btn-danger d-none mb-2">削除する</button><br class="d-none d-sm-block">
                <button id="cancelSelection" class="btn btn-secondary d-none mb-2">キャンセル</button>
            </div>

            <% for(let category of categories){ %>
                <h2 class="mt-5 mb-3">
                    <span class="category-text"><%= category %></span>
                    <span class="badge badge-secondary"><%= workersByCategory[category].length %>件</span>
                </h2>
                <div class="row g-3">
                    <% if (workersByCategory[category].length === 0) { %>
                        <div class="col-lg-3 col-md-4 col-sm-6 col-12">
                            <div class="card h-100 bg-light">
                                <div class="card-body d-flex align-items-center justify-content-center">
                                    <p class="card-text text-muted mb-0">応募者なし</p>
                                </div>
                            </div>
                        </div>
                    <% } else { %>
                        <% for(let worker of workersByCategory[category]){ %>
                            <div class="col-lg-3 col-md-4 col-sm-6 col-12">
                                <div class="card h-100 d-flex flex-column" data-worker-id="<%= worker.id %>" data-worker-name="<%= worker.name %>">
                                    <h5 class="card-header d-flex justify-content-between align-items-center">
                                        <span><%= worker.name %></span>
                                        <input type="checkbox" class="form-check-input selection-checkbox" data-worker-id="<%= worker.id %>">
                                    </h5>
                                    <div class="card-body flex-grow-1">
                                        <p class="card-text">
                                            年齢: <%= calculateAge(worker.birthDate) %>歳
                                        </p>
                                        <p class="card-text">
                                            要件: <%= worker.requirements || '要件なし' %>
                                        </p>
                                    </div>
                                    <div class="card-footer bg-white border-0 p-3">
                                        <a href="tel:<%= worker.phoneNumber %>" class="btn btn-primary btn-sm w-100 mb-2">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-telephone-fill me-1" viewBox="0 0 16 16">
                                                <path fill-rule="evenodd" d="M1.885.511a1.745 1.745 0 0 1 2.61.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.68.68 0 0 0 .178.643l2.457 2.457a.68.68 0 0 0 .644.178l2.189-.547a1.75 1.75 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.6 18.6 0 0 1-7.01-4.42 18.6 18.6 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877z"/>
                                            </svg>
                                            <%= sortPhoneNumber(worker.phoneNumber) %>
                                        </a>
                                        <form action="/admin/applicants/<%= worker.id %>?_method=DELETE" method="POST" class="delete-form">
                                            <button type="button" class="btn btn-danger btn-sm w-100 delete-btn">削除</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>
</div>



<script src="/javascripts/admin/deleteBtn.js"></script>