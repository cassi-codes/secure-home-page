<% layout('layouts/boilerplate') %>
<% block('styles').append('<link rel="stylesheet" href="/css/admin.css">') %>

<div class="container-fluid min-vh-100 d-flex align-items-center login-wrapper">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card login-card">
                    <!-- Card Header with Gradient -->
                    <div class="card-header text-center py-4 login-card-header">
                        <div class="mb-3">
                            <div class="icon-circle mx-auto login-icon-circle">
                                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" viewBox="0 0 16 16" class="login-svg-icon">
                                    <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2m3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2"/>
                                </svg>
                            </div>
                        </div>
                        <h1 class="h3 fw-bold mb-0 login-title">管理人ログイン</h1>
                    </div>

                    <!-- Card Body -->
                    <div class="card-body p-5">
                        <form action="/admin/login" method="POST" novalidate class="needs-validation">
                            <div class="mb-4">
                                <label class="form-label fw-semibold login-form-label" for="name">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="me-2 login-label-icon" viewBox="0 0 16 16">
                                        <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6"/>
                                    </svg>
                                    名前
                                </label>
                                <input class="form-control login-form-input" type="text" id="name" name="username" placeholder="管理人名を入力" required>
                                <div class="invalid-feedback">
                                    名前を入力してください。
                                </div>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-semibold login-form-label" for="password">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="me-2 login-label-icon" viewBox="0 0 16 16">
                                        <path d="M5.338 1.59a61 61 0 0 0-2.837.856.48.48 0 0 0-.328.39c-.554 4.157.726 7.19 2.253 9.188a10.7 10.7 0 0 0 2.287 2.233c.346.244.652.42.893.533q.18.085.293.118a1 1 0 0 0 .101.025 1 1 0 0 0 .1-.025q.114-.034.294-.118c.24-.113.547-.29.893-.533a10.7 10.7 0 0 0 2.287-2.233c1.527-1.997 2.807-5.031 2.253-9.188a.48.48 0 0 0-.328-.39c-.651-.213-1.75-.56-2.837-.855C9.552 1.29 8.531 1.067 8 1.067c-.53 0-1.552.223-2.662.524zM5.072.56C6.157.265 7.31 0 8 0s1.843.265 2.928.56c1.11.3 2.229.655 2.887.87a1.54 1.54 0 0 1 1.044 1.262c.596 4.477-.787 7.795-2.465 9.99a11.8 11.8 0 0 1-2.517 2.453 7 7 0 0 1-1.048.625c-.28.132-.581.24-.829.24s-.548-.108-.829-.24a7 7 0 0 1-1.048-.625 11.8 11.8 0 0 1-2.517-2.453C1.928 10.487.545 7.169 1.141 2.692A1.54 1.54 0 0 1 2.185 1.43 63 63 0 0 1 5.072.56"/>
                                    </svg>
                                    パスワード
                                </label>
                                <input class="form-control login-form-input" type="password" id="password" name="password"
                                    placeholder="8桁以上のパスワード" minlength="8" required>
                                <div class="invalid-feedback">
                                    パスワードは8桁以上で入力してください。
                                </div>
                            </div>

                            <div class="text-center mt-5">
                                <button class="btn w-100 text-white fw-bold login-submit-btn">
                                    ログイン
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/javascripts/admin/formValidate.js"></script>